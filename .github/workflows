name: 部署並上傳 RSS

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ['latest']

    steps:
    - name: 檢出代碼
      uses: actions/checkout@latest

    - name: 設置 Python 環境
      uses: actions/setup-python@latest
      with:
        python-version: ${{ matrix.python-version }}

    - name: 安裝依賴
      run: |
        python -m pip install --upgrade pip
        pip install niquests feedgen

    - name: 執行 Python 腳本
      run: |
        if python rss.py; then
          echo "Python 腳本執行成功。"
        else
          echo "錯誤：Python 腳本執行失敗。"
          exit 1
        fi

    - name: 上傳 RSS 文件
      uses: actions/upload-artifact@latest
      with:
        name: taiwanplus-rss
        path: taiwanplus.rss
